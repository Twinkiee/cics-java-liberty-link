<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
  <Properties>
    <Property name="basePath">/SVIL/ctg/tmp</Property>
  </Properties>

  <Appenders>
    <RollingFile name="fileLogger" fileName="${basePath}/wlp-link-poc.log"
      filePattern="${basePath}/wlp-link-poc-%d{yyyy-MM-dd}.log">
      <PatternLayout>
        <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
      </PatternLayout>
      <Policies>
        <OnStartupTriggeringPolicy />
        <TimeBasedTriggeringPolicy interval="1"/>
      </Policies>
    </RollingFile>

    <Console name="console" target="SYSTEM_OUT">
      <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <!--      <Logger name="com.sample" level="debug" additivity="true">-->
    <!--        <appender-ref ref="fileLogger" level="debug" />-->
    <!--      </Logger>-->
    <Root level="info" additivity="false">
      <appender-ref ref="console"/>
      <appender-ref ref="fileLogger"/>
    </Root>
  </Loggers>
</Configuration>